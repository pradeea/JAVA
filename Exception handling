class ExceptionHandlingUpdate{
    public static void main(String[] args) {                //arithmetic,numberformat,arrayinex
        int a;
        int b;                          
        int c;     // for c in exception handling c must be initialized to 0 for c=a/b; 
                   // for normal command line arguments no need to initialize c=0;u can normally declare values like int c;

        int arr[]={1,2,3,4};
        try{
           a=Integer.parseInt(args[0]);
           b=Integer.parseInt(args[1]);
           c=a/b;
           
        }
        
        catch(NumberFormatException e){
            System.out.println("plz enter an number");
        }
        catch(ArrayIndexOutOfBoundsException e){
            System.out.println("enter an valid length of array");
        }
        tyr{
        System.out.println(arr[4]);
        }
        catch(ArithmeticException e){
            System.out.println("the division is not possible try another number");
        }


        System.out.println(c);
        System.out.println("thank Q!!!");
    }
}
